    },
    "responses": {
      "Unauthorized401": {
        "description": "You are not authenticated to use this resource"
      },
      "Forbidden403": {
        "description": "You lack the proper permission set to use this resource"
      },
      "NotFound404": {
        "description": "The requried resource is not reachable"
      },
      "MethodNotAllowed405": {
        "description": "Method not allowed",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        }
      },
      "BaseError400": {
        "description": "Missing or invalid data provided",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            }
          }
        }
      },
      "ValidationError400": {
        "description": "Missing or invalid data provided. Validation details included for specific properties",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string"
                },
                "properties": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": {
                        "type": "string"
                      },
                      "message": {
                        "type": "string"
                      }
                    },
                    "additionalProperties": false
                  }
                }
              },
              "additionalProperties": false
            }
          }
        }
      }
    },
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
