{
  "openapi": "3.0.2",
  "info": {
    "title": "AuthX Service",
    "version": "1.0.0",
    "description": "Authentication and authorization middleware service"
  },
  "servers": [
    {
      "url": "https://api.ntth.ai/v1"
    }
  ],
  "tags": [
    {
      "name": "AuthxClient",
      "description": "Name for the autogenerated client code"
    }
  ],
  "paths": {
    "/healthcheck": {
      "get": {
        "operationId": "checkHealth",
        "tags": [
          "AuthxClient"
        ],
        "description": "Health check endpoint.",
        "responses": {
          "200": {
            "description": "Service is OK"
          },
          "500": {
            "description": "Service has issues and it is not working properly"
          }
        }
      }
    },
    "/auth/login": {
      "post": {
        "operationId": "authLogin",
        "tags": [
          "AuthxClient"
        ],
        "description": "Log in a entity that can be authenticated (user, robot) and return the token data.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "title": "UserCredentials",
                "properties": {
                  "username": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/UserLoginResponse"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BaseError400"
          }
        }
      }
    },
    "/auth/appLogin": {
      "post": {
        "operationId": "authAppLogin",
        "tags": [
          "AuthxClient"
        ],
        "description": "Log in an application and return the token data.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "title": "ApplicationCredentials",
                "properties": {
                  "id": {
                    "type": "string"
                  },
                  "secret": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/ApplicationLoginResponse"
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BaseError400"
          }
        }
      }
    },
    "/auth/token": {
      "post": {
        "operationId": "authToken",
        "tags": [
          "AuthxClient"
        ],
        "description": "Verify a token was issued by the IDM service",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "title": "Token",
                "properties": {
                  "token": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Token successfully verified",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/UserTokenResponse"
                    },
                    {
                      "$ref": "#/components/schemas/ApplicationTokenResponse"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BaseError400"
          }
        }
      }
    },
    "/auth/refresh": {
      "post": {
        "operationId": "authRefresh",
        "tags": [
          "AuthxClient"
        ],
        "description": "Refresh token data with a refresh token.",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "title": "RefreshToken",
                "properties": {
                  "token": {
                    "type": "string"
                  }
                },
                "additionalProperties": false
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Refresh successful",
            "content": {
              "application/json": {
                "schema": {
                  "oneOf": [
                    {
                      "$ref": "#/components/schemas/UserTokenResponse"
                    },
                    {
                      "$ref": "#/components/schemas/ApplicationTokenResponse"
                    }
                  ]
                }
              }
            }
          },
          "400": {
            "$ref": "#/components/responses/BaseError400"
          }
        }
      }
    },
    "/auth/logout": {
      "post": {
        "operationId": "authLogout",
        "tags": [
          "AuthxClient"
        ],
        "summary": "Session Logout",
        "responses": {
          "200": {
            "description": "Logout susccessful"
          },
          "400": {
            "$ref": "#/components/responses/ValidationError400"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized401"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden403"
          }
        }
      }
    },
    "/auth/logout/all": {
      "post": {
        "operationId": "authLogoutAll",
        "tags": [
          "AuthxClient"
        ],
        "summary": "Logout all Sessions/Tokens for a user/applcation",
        "responses": {
          "200": {
            "description": "Logout susccessful"
          },
          "400": {
            "$ref": "#/components/responses/ValidationError400"
          },
          "401": {
            "$ref": "#/components/responses/Unauthorized401"
          },
          "403": {
            "$ref": "#/components/responses/Forbidden403"
          }
        }
      }
    }
  },
