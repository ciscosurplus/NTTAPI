              },
              "roleNames": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              },
              "grants": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/BasicGrant"
                }
              },
              "scope": {
                "type": "object",
                "properties": {
                  "globalServices": {
                    "type": "string"
